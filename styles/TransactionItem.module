
.transactionItem {
  background: #fff;
  padding: 15px;
  border-radius: 8px;
  margin-bottom: 10px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.05);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.transactionItem .description {
  font-weight: 500;
}

.transactionItem .amount {
  font-weight: bold;
}

.transactionItem .income {
  color: green;
}

.transactionItem .expense {
  color: red;
}
