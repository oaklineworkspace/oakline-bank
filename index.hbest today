  <!-- ======= SCRIPTS ======= -->
  <script type="module">
    import { createClient } from "https://cdn.jsdelivr.net/npm/@supabase/supabase-js/+esm";

    const supabaseUrl = 'https://arvuoabjhqdkxhsswybx.supabase.co';
    const supabaseKey = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6ImFydnVvYWJqaHFka3hoc3N3eWJ4Iiwicm9sZSI6ImFub24iLCJpYXQiOjE3NTU2NTQ5MzksImV4cCI6MjA3MTIzMDkzOX0.Gt1waZAhZJKS4_VGqgNQCcroGehjnxKyDUfiCRLSWB8';
    const supabase = createClient(supabaseUrl, supabaseKey);

    // Dark mode toggle
    document.getElementById('darkModeToggle').addEventListener('change', e => {
      document.body.classList.toggle('dark-mode', e.target.checked);
    });

    // Loan calculator
    function calculateLoan() {
      const principal = parseFloat(document.getElementById('loanAmount').value);
      const rate = parseFloat(document.getElementById('loanInterest').value)/100/12;
      const months = parseFloat(document.getElementById('loanYears').value)*12;
      const result = document.getElementById('loanResult');
      if(!principal || !rate || !months){ result.innerText="Please fill all fields."; return; }
      const monthly = (principal*rate)/(1-Math.pow(1+rate,-months));
      result.innerText=`Monthly Payment: $${monthly.toFixed(2)}`;
    }

    // Navbar links update
    async function updateNavLinks() {
      const loginLink = document.getElementById('navLoginLink');
      const footerLoginLink = document.getElementById('footerLoginLink');
      const { data: { user } } = await supabase.auth.getUser();
      if(user){
        loginLink.style.display='none';
        footerLoginLink.style.display='none';
      } else {
        loginLink.style.display='inline';
        footerLoginLink.style.display='inline';
      }
    }

    updateNavLinks();
  </script>
