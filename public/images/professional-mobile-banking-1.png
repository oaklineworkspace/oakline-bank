
<svg width="320" height="200" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bg1" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1a365d;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#059669;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="phone1" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ffffff;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#f8fafc;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="320" height="200" fill="url(#bg1)"/>
  
  <!-- Professional person silhouette -->
  <circle cx="120" cy="80" r="25" fill="#ffffff" opacity="0.9"/>
  <rect x="100" y="105" width="40" height="60" rx="20" fill="#ffffff" opacity="0.9"/>
  
  <!-- Mobile phone -->
  <rect x="180" y="50" width="80" height="120" rx="15" fill="url(#phone1)" stroke="#059669" stroke-width="2"/>
  <rect x="190" y="65" width="60" height="40" fill="#1a365d" opacity="0.1"/>
  <rect x="190" y="110" width="60" height="20" fill="#059669" opacity="0.8"/>
  <circle cx="220" cy="140" r="8" fill="#059669"/>
  
  <!-- Banking icons -->
  <circle cx="210" cy="75" r="6" fill="#059669"/>
  <rect x="230" y="72" width="15" height="6" fill="#059669"/>
  
  <!-- Title overlay -->
  <rect x="0" y="160" width="320" height="40" fill="rgba(0,0,0,0.7)"/>
  <text x="160" y="180" text-anchor="middle" fill="white" font-family="Arial, sans-serif" font-size="14" font-weight="bold">Professional Mobile Banking</text>
</svg>
