
<svg width="320" height="200" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bg3" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1a365d;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#2d5a87;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="tablet" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ffffff;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#e2e8f0;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="320" height="200" fill="url(#bg3)"/>
  
  <!-- Professional businessman -->
  <circle cx="80" cy="80" r="25" fill="#ffffff" opacity="0.9"/>
  <rect x="60" y="105" width="40" height="70" rx="20" fill="#ffffff" opacity="0.9"/>
  
  <!-- Tablet device -->
  <rect x="140" y="30" width="140" height="100" rx="10" fill="url(#tablet)" stroke="#059669" stroke-width="3"/>
  
  <!-- Dashboard interface on tablet -->
  <rect x="155" y="45" width="110" height="15" fill="#059669" opacity="0.8"/>
  <rect x="155" y="65" width="50" height="20" fill="#1a365d" opacity="0.3"/>
  <rect x="215" y="65" width="50" height="20" fill="#047857" opacity="0.3"/>
  <rect x="155" y="90" width="110" height="25" fill="#059669" opacity="0.2"/>
  
  <!-- Chart elements -->
  <polyline points="160,100 180,95 200,85 220,90 240,80 260,85" stroke="#059669" stroke-width="3" fill="none"/>
  <circle cx="180" cy="95" r="3" fill="#059669"/>
  <circle cx="200" cy="85" r="3" fill="#059669"/>
  <circle cx="240" cy="80" r="3" fill="#059669"/>
  
  <!-- Hands holding tablet -->
  <ellipse cx="130" cy="110" rx="15" ry="8" fill="#ffffff" opacity="0.7"/>
  <ellipse cx="290" cy="110" rx="15" ry="8" fill="#ffffff" opacity="0.7"/>
  
  <!-- Title overlay -->
  <rect x="0" y="160" width="320" height="40" fill="rgba(0,0,0,0.7)"/>
  <text x="160" y="180" text-anchor="middle" fill="white" font-family="Arial, sans-serif" font-size="14" font-weight="bold">Businessman Tablet Banking</text>
</svg>
