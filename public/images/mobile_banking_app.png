
<svg xmlns="http://www.w3.org/2000/svg" width="800" height="600" viewBox="0 0 800 600">
  <!-- Background -->
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1e40af;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#3730a3;stop-opacity:1" />
    </linearGradient>
  </defs>
  <rect width="800" height="600" fill="url(#bg)"/>
  
  <!-- Person silhouette holding phone -->
  <g fill="#2d3748" opacity="0.7">
    <circle cx="400" cy="200" r="40"/>
    <rect x="360" y="240" width="80" height="120" rx="40"/>
    <rect x="340" y="260" width="30" height="80" rx="15"/>
    <rect x="430" y="260" width="30" height="80" rx="15"/>
  </g>
  
  <!-- Phone -->
  <rect x="320" y="280" width="160" height="280" fill="#1a202c" rx="20"/>
  <rect x="330" y="300" width="140" height="240" fill="#000" rx="10"/>
  
  <!-- Phone Screen -->
  <rect x="335" y="305" width="130" height="230" fill="#ffffff" rx="8"/>
  
  <!-- App Header -->
  <rect x="335" y="305" width="130" height="40" fill="#1e40af" rx="8"/>
  <text x="400" y="325" text-anchor="middle" fill="#ffffff" font-family="Arial" font-size="12" font-weight="bold">OAKLINE BANK</text>
  
  <!-- Account Balance -->
  <rect x="345" y="355" width="110" height="30" fill="#f7fafc" rx="5"/>
  <text x="350" y="370" fill="#1a202c" font-family="Arial" font-size="8">Total Balance</text>
  <text x="400" y="380" text-anchor="middle" fill="#1e40af" font-family="Arial" font-size="14" font-weight="bold">$12,547.89</text>
  
  <!-- Quick Actions -->
  <g fill="#e2e8f0">
    <rect x="345" y="395" width="25" height="25" rx="5"/>
    <rect x="375" y="395" width="25" height="25" rx="5"/>
    <rect x="405" y="395" width="25" height="25" rx="5"/>
    <rect x="435" y="395" width="25" height="25" rx="5"/>
  </g>
  
  <!-- Transaction List -->
  <g fill="#f7fafc" stroke="#e2e8f0">
    <rect x="345" y="435" width="110" height="20" rx="3"/>
    <rect x="345" y="460" width="110" height="20" rx="3"/>
    <rect x="345" y="485" width="110" height="20" rx="3"/>
    <rect x="345" y="510" width="110" height="20" rx="3"/>
  </g>
  
  <!-- Icons on phone -->
  <text x="357" y="410" fill="#1e40af" font-family="Arial" font-size="10">💸</text>
  <text x="387" y="410" fill="#1e40af" font-family="Arial" font-size="10">📱</text>
  <text x="417" y="410" fill="#1e40af" font-family="Arial" font-size="10">🏦</text>
  <text x="447" y="410" fill="#1e40af" font-family="Arial" font-size="10">💳</text>
</svg>
